<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_41sdp"
        android:layout_marginEnd="@dimen/_41sdp"
        android:background="@drawable/tools_bg"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal"
        tools:ignore="UseAppTint"
        android:layout_marginTop="@dimen/_25sdp"
        >

        <ImageView
            android:id="@+id/pencil"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:padding="@dimen/_6sdp"
            android:background="@drawable/tools_selected_bg"
            android:tint="@color/tools_icon_selected"
            android:src="@drawable/ic_pencil_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/arrow"
            />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:padding="@dimen/_10sdp"
            android:tint="@color/tools_icon_default"
            android:src="@drawable/arrow_icon"
            app:layout_constraintStart_toEndOf="@+id/pencil"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/square"
            />

        <ImageView
            android:id="@+id/square"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:padding="@dimen/_6sdp"
            android:tint="@color/tools_icon_default"
            android:src="@drawable/ic_square_icon"
            app:layout_constraintStart_toEndOf="@+id/arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circle"
            />

        <ImageView
            android:id="@+id/circle"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:padding="@dimen/_6sdp"
            android:tint="@color/tools_icon_default"
            android:src="@drawable/ic_circle_icon"
            app:layout_constraintStart_toEndOf="@+id/square"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/colorPicker"
            />

        <ImageView
            android:id="@+id/colorPicker"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:padding="@dimen/_8sdp"
            android:tint="@color/tools_icon_default"
            android:src="@drawable/color_picker_icon"
            app:layout_constraintStart_toEndOf="@+id/circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/drawView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolsView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_12sdp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/toolsView"
        app:layout_constraintTop_toBottomOf="@+id/toolsView"
        android:background="@drawable/tools_bg"
        android:padding="@dimen/_8sdp"
        android:orientation="horizontal"
        tools:ignore="UseAppTint"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_15sdp"
        >

        <FrameLayout
            android:id="@+id/red"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:background="@drawable/red_color_bg"
            android:padding="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/green"
            />

        <FrameLayout
            android:id="@+id/green"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:background="@drawable/green_color_bg"
            android:padding="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/red"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/blue"
            />

        <FrameLayout
            android:id="@+id/blue"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:background="@drawable/blue_color_bg"
            android:padding="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/black"
            />

        <FrameLayout
            android:id="@+id/black"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:background="@drawable/black_color_active_bg"
            android:padding="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/_1sdp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:textSize="@dimen/_10ssp"
        android:background="@drawable/clear_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>